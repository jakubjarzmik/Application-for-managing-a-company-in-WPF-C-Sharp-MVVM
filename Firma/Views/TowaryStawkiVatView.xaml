<local:WszystkieViewBase x:Class="Firma.Views.TowaryStawkiVatView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local="clr-namespace:Firma.Views"
                         mc:Ignorable="d"
                         d:DesignHeight="450"
                         d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False"
                  ItemsSource="{Binding List}"
                  SelectedItem="{Binding Path=SelectedStawkaVat, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kraj"
                                    Binding="{Binding Path=Kraj}" />
                <DataGridTextColumn Header="Stawka"
                                    Binding="{Binding Path=Stawka}" />
                <DataGridTextColumn Header="Opis"
                                    Binding="{Binding Path=Opis}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszystkieViewBase>
