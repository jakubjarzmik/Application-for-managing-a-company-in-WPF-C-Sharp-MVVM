<local:WszystkieViewBase x:Class="Firma.Views.ZmianyCenyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Firma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Towar" Binding="{Binding Path=Towar}"/>
                <DataGridTextColumn Header="Jednostka miary" Binding="{Binding Path=JednostkaMiary}"/>
                <DataGridTextColumn Header="Cena netto" Binding="{Binding Path=CenaNetto}"/>
                <DataGridTextColumn Header="Cena brutto" Binding="{Binding Path=CenaBrutto}"/>
                <DataGridTextColumn Header="Wartosc vat" Binding="{Binding Path=WartoscVat}"/>
                <DataGridTextColumn Header="Data obowiazywania od" Binding="{Binding Path=DataObowiazywaniaOd}"/>
                <DataGridTextColumn Header="Data obowiazywania do" Binding="{Binding Path=DataObowiazywaniaDo}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszystkieViewBase>
